{
  "expo": {
    "name": "Faktura+",
    "slug": "faktura-plus",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "fakturaplus",
    "userInterfaceStyle": "automatic",
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.fakturaplus.app",
      "infoPlist": {
        "NSCameraUsageDescription": "Scan invoices using your camera for automatic data extraction",
        "NSPhotoLibraryUsageDescription": "Select invoice photos from your gallery to import",
        "CFBundleAllowMixedLocalizations": true
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#0F172A"
      },
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.INTERNET",
        "android.permission.ACCESS_NETWORK_STATE"
      ],
      "package": "com.fakturaplus.app"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#0F172A"
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Allow camera access to scan invoices and extract data automatically"
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow gallery access to select invoice photos for import"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "locales": {
      "bg": "./locales/bg.json",
      "en": "./locales/en.json"
    }
  }
}
